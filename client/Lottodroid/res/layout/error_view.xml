<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/error_dialog_text"
		android:textSize="18dp"
		android:paddingLeft="15dp" android:paddingRight="5dp" android:paddingTop="80dp"/>
	
	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/icon_error1"
		android:paddingTop="30dp" android:layout_gravity="center_horizontal"/>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/sugerencia_error_dialog_text"
		android:textSize="18dp"
		android:paddingLeft="15dp" android:paddingTop="30dp"/>
		
	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/icon_sug"
		android:paddingTop="30dp" android:layout_gravity="center_horizontal"/>

</LinearLayout>
